@using Microsoft.AspNetCore.Http;
@model IEnumerable<Strawberry_Shortcake.Models.User>
    @{
        ViewData["Title"] = "Index";
    }


    @if (Context.Session.GetInt32("MASTER_LOGIN_KEY") == null)
    {
    }
    else
    {
        <h1>Index</h1>

        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UserEmail)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserPw)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Activation)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserEmail)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserPw)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Activation)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.UserNo">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.UserNo">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.UserNo">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }
